<% @following_users.each do |user| %>
  <div class="row p-4 mx-2 mt-4 border border-1 wrap-top">
    <div class="col-xs-2 col-lg-2">
      <%# ユーザー情報の左側 %>
      <div class="mt-3 profile-left">
        <%# ユーザーのアイコン画像を表示 %>
        <div>
          <% if user.avatar.present? %>
            <%= image_tag user.avatar.url, width: "180", height: "180", class: "avatar", alt: "..." %>
          <% else %>
            <%= image_tag "default-image.png", width: "180", height: "180", class: "avatar", alt: "..."  %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-4 col-lg-4">
      <%# ユーザー情報の中央 %>
      <div>
        <%# ユーザーのニックネームを表示 %>
        <h3>
          <b><%= user.nickname %></b>
        </h3>
        <%# ユーザーの年齢を表示 %>
        <p>
          <% if user.age_id != 1 %>
            <% if user.age.present? %>
              <small><%= user.age.name %></small>
            <% end %>
          <% end %>
        </p>
        <%= link_to user_path(user.id) do %>
          <button type="button" class="btn btn-light border border-3 mb-3">プロフィールを確認</button>
        <% end %>
      </div>
    </div>
    <%# ユーザー情報の右側 %>
    <div class="col-xs-6 col-lg-6 profile-intro" style="max-height: 15rem;">
      <% if user.introduction.present? %>
        <%# ユーザーの自己紹介を表示 %>
        <p class="p-3"><%= user.introduction %></p>
      <% else %>
        <p class="p-3 text-muted">
          プロフィールを編集して、<br/>
          自己紹介を書いてみよう！
        </p>
      <% end %>
    </div>
  </div>
<% end %>